<% if @company.errors.any? %>
  <ul>
    <% @company.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @company do |co| %>
  <div class="form-group">
    <%= co.label :name %>
    <%= co.text_field :name, placeholder: 'company name' %>
  </div>
  <div class="form-group">
    <%= co.label :activity %>
    <%= co.select :activity, [Company::COMPANY_TYPE_FACTORY, Company::COMPANY_TYPE_PUBLIC] %>
  </div>
  <div class="form-group">
    <%= co.label :phone1 %>
    <%= co.telephone_field :phone1, placeholder: 'Contact telephone' %>
  </div>
  <div class="form-group">
    <%= co.label :email %>
    <%= co.email_field :email, placeholder: 'Contact email' %>
  </div>
    <%= co.submit "Update", class: "btn btn-default" %>
<% end %>