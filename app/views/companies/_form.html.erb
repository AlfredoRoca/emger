<% if @company.errors.any? %>
  <ul>
    <% @company.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @company, html: {class: "form-horizontal"} do |co| %>
  <div class="form-group">
    <%= co.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= co.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= co.label :activity, class: "col-sm-2 control-label"%>
    <div class="col-sm-4">
      <%= co.select :activity, ["", Company::COMPANY_TYPE_FACTORY, Company::COMPANY_TYPE_PUBLIC] %>
    </div>
  </div>
  <div class="form-group">
    <%= co.label :phone1, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= co.telephone_field :phone1, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= co.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= co.email_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
      <div class="col-sm-offset-2 col-sm-4">
        <%= co.submit "Submit", class: "btn btn-success" %>
    </div>
  </div>
<% end %>