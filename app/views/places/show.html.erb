<% if current_user %>
  <h1>Place info</h1>

  <% if @place.errors.any? %>
    <ul>
      <% @place.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <h3><%= @place.name %></h3>
  <ul>
    <li>Description: <%= @place.description %></li>
    <li>Latitude:<%= @place.coord_x %></li>
    <li>Longitude:<%= @place.coord_y %></li>
  </ul>
    <h4>Emergencies in this place</h4>
      <% if @place.emergencies.any? %>
      <div class="row">
        <div class="col-md-4">
          <div class="table-responsive">
            <table class="table table-striped table-hover table-condensed">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Status</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @place.emergencies.each do |emer| %>
                  <tr>
                    <td><%= localize_date emer.date %></td>
                    <td><%= emer.status %></td>
                    <td><%= link_to "Show", emergency_path(emer) %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <% else %>
        <p>NONE</p>
      <% end %>
<% end %>
