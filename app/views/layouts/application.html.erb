<!DOCTYPE html>
<html>
<head>
  <title>Emger</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <!-- <nav class="navbar navbar-default navbar-fixed-top" role="navigation"> -->
  <nav >
    <div class="container">
      <ul>
        <% if current_user %>
          <li><%= link_to "Map", root_path %></li>
          <li><%= link_to "Emergencies", emergencies_path %></li>
          <li><%= link_to "Scenarios", scenarios_path %></li>
          <li><%= link_to "Companies", companies_path %></li>
          <li><%= link_to "Places", places_path %></li>
          <li><%= link_to "People", people_path %></li>
          <%= link_to "Logout", logout_path, method: :delete, confirm: 'Logout?', remote: true %>
          <div><%= current_user.name %> <%= current_user.lastname %></div>
        <% end %>
        </ul>
    </div>
  </nav>

    <% flash.map do |key, msg| %>
      <%= content_tag :div, msg, id: key %>
    <% end %>

    <%= yield %>

</body>
</html>
