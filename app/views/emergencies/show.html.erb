<h1>Emergency information</h1>

<% if @emergency.errors.any? %>
  <ul>
    <% @emergency.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<ul>
  <li>Date: <%= localize_date @emergency.date %></li>
  <li>Status: <%= @emergency.status %></li>
  <% if @emergency.simulacrum %>
    <li>"Simulacrum" </li>
  <% end %>
</ul>
<%= link_to "Close", close_emergency_path(@emergency) %>
<%= link_to "Write CLEAR in plc", write_clear_in_plc_path(@emergency), method: :post %>
<%= link_to "Write ID in plc", write_id_in_plc_path(@emergency), method: :post %>
