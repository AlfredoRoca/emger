<% if current_user %>
  <h1>Emergencies</h1>

  <%= render 'map' %>

  <%= link_to "New", new_emergency_path %>
  <% if @emergencies.any? %>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Status</th>
          <th>Simulacrum</th>
          <th>Place</th>
          <th>Place name</th>
          <th>Follow-up</th>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
          <% @emergencies.each do |emer| %>
            <tr>
              <td><%= localize_date emer.date %></td>
              <td><%= emer.status %></td>
              <td><%= emer.simulacrum %></td>
              <td><%= emer.place_id if emer.place %></td>
              <td><%= emer.place.name if emer.place %></td>
              <td><%= emer.followups.count if emer.followups %></td>
              <td><%= link_to "Edit", edit_emergency_path(emer) %></td>
              <td><%= link_to "Edit place", edit_place_path(emer.place_id) %></td>
              <td><%= link_to "Show", emergency_path(emer) %></td>
              <td><%= link_to "Close", close_emergency_path(emer) %></td>
              <td><%= link_to "Delete", emergency_path(emer), method: :delete,
                      data: {confirm: "Are you sure?"}  %></td>
            </tr>
          <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No emergencies active</p>
  <% end %>

<% else %>
  <%= render 'login/login_form' %>
<% end %>
