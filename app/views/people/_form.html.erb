<% if @person.errors.any? %>
<ul>
  <% @person.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @person, html: {class: "form-horizontal"} do |p| %>
  <div class="form-group">
    <%= p.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= p.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= p.label :lastname, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= p.text_field :lastname, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= p.label :phone, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= p.telephone_field :phone, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= p.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= p.email_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= p.label :password, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= p.password_field :password, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= p.label :password_confirmation, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= p.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= p.label :company_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= p.select :company_id, Company.all.collect {|co| [co.name, co.id]},
          {include_blank: true}  %>
    </div>
  </div>
  <div class="form-group">
      <div class="col-sm-offset-2 col-sm-4">
        <%= p.submit "Submit", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
