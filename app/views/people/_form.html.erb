<% if @person.errors.any? %>
<ul>
  <% @person.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @person do |p| %>
  <div class="form-group">
    <%= p.label :name %>
    <%= p.text_field :name, placeholder: 'first name' %>
  </div>
  <div class="form-group">
    <%= p.label :lastname %>
    <%= p.text_field :lastname, placeholder: 'surname' %>
  </div>
  <div class="form-group">
    <%= p.label :phone %>
    <%= p.telephone_field :phone %>
  </div>
  <div class="form-group">
    <%= p.label :email %>
    <%= p.email_field :email %>
  </div>
  <div class="form-group">
    <%= p.label :password %>
    <%= p.password_field :password %>
  </div>
  <div class="form-group">
    <%= p.label :password_confirmation %>
    <%= p.password_field :password_confirmation %>
  </div>
  <div class="form-group">
    <%= p.label :company_id %>
    <%= p.select :company_id, Company.all.collect {|co| [co.name, co.id]} %>
  </div>
    <%= p.submit "Update" %>
<% end %>
