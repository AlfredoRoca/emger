<% if @scenario.errors.any? %>
  <ul>
    <% @scenario.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @scenario do |scen| %>
  <div class="form-group">
  <%= scen.label :name %>
  <%= scen.text_field :name, placeholder: 'Scenario short name' %>
  </div>
  <div class="form-group">
  <%= scen.label :description %>
  <%= scen.text_field :description, placeholder: 'Scenario description' %>
  </div>
  <%= scen.submit "Submit", class: "btn btn-default" %>
<% end %>