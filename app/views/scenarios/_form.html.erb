<% if @scenario.errors.any? %>
  <ul>
    <% @scenario.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @scenario, html: {class: "form-horizontal"} do |scen|  %>
  <div class="form-group">
    <%= scen.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= scen.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= scen.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= scen.text_field :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
      <div class="col-sm-offset-2 col-sm-4">
        <%= scen.submit "Submit", class: "btn btn-success" %>
    </div>
  </div>
<% end %>