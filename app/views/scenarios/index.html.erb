<% if current_user %>
  <h1>Scenarios</h1>
  <%= button_to "New", new_scenario_path, method: :get, class: "btn btn-success btn-xs" %>
  
  <div class="table-responsive">
    <table class="table table-striped table-hover table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @scenarios.each do |scen| %>
        <tr>
          <td><%= scen.name %></td>
          <td><%= scen.description %></td>
          <td><%= link_to "Edit", edit_scenario_path(scen) %></td>
          <td><%= link_to "Show", scenario_path(scen) %></td>
          <td><%= link_to "Delete", scenario_path(scen), method: :delete,
                  data: {confirm: 'Are you sure?'} %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

<% end %>